<view class="page-todos">
  <checkbox-group onChange="onCheckedChanged">
    <view a:for="{{todos}}">
      <checkbox value="{{item.text}}" checked="{{item.completed}}"/>
      <text>{{item.text}}</text>
    </view>
  </checkbox-group>
  <view>
    <button onTap="addTodo">Add Todo</button>
  </view>
</view>
